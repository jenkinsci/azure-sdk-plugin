        <dependency>
            <groupId>io.jenkins.plugins</groupId>
            <artifactId>json-path-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.azure</groupId>
            <artifactId>azure-core</artifactId>
            <version>1.54.1</version>
